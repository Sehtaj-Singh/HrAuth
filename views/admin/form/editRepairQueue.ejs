<%- include(`../../partials/head`) %>
  <title>Second-Hand Mobile form</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <%- include(`../../partials/adminHeader`) %>

  <form action="/Admin/repair/Edit/Queue/<%= repair._id %>" method="POST">
    <label>Device Name:</label>
    <input type="text" name="deviceName" value="<%= repair.deviceName %>" required>
  
    <label>Customer Name:</label>
    <input type="text" name="customerName" value="<%= repair.customerName %>" required>
  
    <label>Replacement:</label>
    <input type="text" name="replacement" value="<%= repair.replacement %>" required>
  
    <label>Replacement Cost:</label>
    <input type="text" name="replacementCost" value="<%= repair.replacementCost %>" required><br>
  
    <label>Status:</label><br>
    <label>
      <input type="radio" name="status" value="Pending" <%= repair.status === 'Pending' ? 'checked' : '' %>> Pending
    </label>
    <label>
      <input type="radio" name="status" value="Completed" <%= repair.status === 'Completed' ? 'checked' : '' %>> Completed
    </label>
  
    <br><br>
    <button type="submit">Edit Repair Queue</button>
  </form>
</body>
</html>