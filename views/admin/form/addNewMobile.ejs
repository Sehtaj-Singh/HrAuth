<%- include(`../../partials/head`) %>
  <title>Second-Hand Mobile form</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <%- include(`../../partials/adminHeader`) %>

    
  <h2 id="amh2">New Phones</h2>
  <form id="amform" action="/Admin/addMobile/New" method="POST"  enctype="multipart/form-data">
    <input id="aminput" type="text" name="Nname" placeholder="Mobile Name" required />
    <input id="aminput" type="text" name="Nprice" placeholder="Price" required />
    <p>Front page Image for card :-</p>
    <input id="aminputF" type="file" name="Nimage" required />
    <input id="aminput" type="text" name="Ndiscount" placeholder="Discount (%)" />
    <input id="aminput" type="text" name="Nmrp" placeholder="Fake MRP" required />
    <input id="aminputS" type="submit" value="Add New Phone" />
  </form>
  
</body>
</html>